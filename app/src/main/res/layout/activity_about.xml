<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:orientation="vertical">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:src="@drawable/placelogo"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:text="PlaceLocator is mobile android application which is helpful to search the nearest Restaurant,Banks,ATM,Hotel,School,Movie Theaters,Police Stations,Post office"
        android:textColor="#000000"
        android:textSize="23sp"
        android:textStyle="bold"
         />




</LinearLayout>